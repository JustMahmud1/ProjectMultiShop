@model List<Contact>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Customer messages</h4>
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> Name </th>
                            <th> E-mail </th>
                            <th> Subject </th>
                            <th> Message </th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Contact contact in Model)
                        {
                            <tr>
                                <td> @contact.Id</td>
                                <td> @contact.Name </td>
                                <td>
                                    @contact.Email
                                </td>
                                <td> @contact.Subject </td>
                                <td> @contact.Message </td>
                                <td><a asp-controller="Contact" asp-action="Delete" asp-route-Id="@contact.Id" type="button" class="btn btn-outline-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

